<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings_Fragment"
    android:id="@+id/settings"
    android:background="@drawable/base_screen">

    <Button
        android:id="@+id/nightmode"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:layout_marginTop="230dp"
        android:text="@string/night_mode"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/notification"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:layout_marginTop="320dp"
        android:text="@string/send_coordinates"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/passUpdate"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="410dp"
        android:text="@string/update_password"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/editPassUpdate"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="410dp"
        android:autofillHints=""
        android:background="@drawable/userinputtext"
        android:ems="10"
        android:hint="@string/new_password"
        android:inputType="text"
        android:paddingStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,RtlSymmetry" />

    <Button
        android:id="@+id/logout"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginStart="121dp"
        android:layout_marginTop="500dp"
        android:text="@string/signout"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameSetting"
        android:layout_width="280dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/full_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userEmailSetting"
        android:layout_width="280dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>